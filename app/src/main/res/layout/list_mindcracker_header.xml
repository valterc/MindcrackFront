<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.valterc.WebImageView
        android:id="@+id/webImageViewHeader"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:tint="#BB000000"/>

    <LinearLayout
        android:id="@+id/linearLayoutLogoWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/webImageViewHeader"
        android:layout_marginLeft="20dp">

        <com.valterc.WebImageView
            android:id="@+id/webImageViewLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/webImageViewHeader"
        android:layout_toRightOf="@id/linearLayoutLogoWrapper"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:shadowColor="#FF121212"
        android:shadowRadius="4"
        android:fontFamily="sans-serif"
        android:textColor="#FFE3E3E3"/>

</RelativeLayout>