        <!-- Loading -->
        <RelativeLayout
            android:id="@+id/relativeLayoutLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:visibility="gone">
            <!-- TODO: DEBUG ONLY: Set visibility to visible -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ProgressBar
                    android:id="@+id/progressBarLoading"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/textViewLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progressBarLoading"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Loading video info..."
                    android:textColor="#666"
                    android:textSize="16sp" />

            </RelativeLayout>


        </RelativeLayout>

        <!-- Error Loading -->
        <RelativeLayout
            android:id="@+id/relativeLayoutErrorLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewErrorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Unable to load video info"
                android:textSize="19sp" />

            <Button
                android:id="@+id/buttonTryAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewErrorTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Try again"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
