<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".main.video.MindcrackerVideoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#0000" />

    <!-- Video and Ad -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Min 24dp from top-->
        <fragment
            android:id="@+id/fragmentYoutube"
            android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <FrameLayout
            android:id="@+id/frameLayoutAd"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#f000"
            android:visibility="gone">

            <com.mopub.mobileads.MoPubView
                android:id="@+id/adview"
                android:layout_width="fill_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:id="@+id/linearLayoutCloseAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="#5000"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/cross"
                    android:tint="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="-3dp"
                    android:text="close"
                    android:textColor="#fff"
                    android:textSize="17sp" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

    <!-- Description -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title -->
        <TextView
            android:id="@+id/textViewVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Video Title"
            android:textSize="20sp" />

        <!-- More Info and Like/Dislike -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewVideoTitle"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/textViewVideoPublishDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 of November at 18:52"
                android:textColor="#888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewVideoViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewVideoPublishDate"
                android:layout_marginTop="2dp"
                android:text="301 views"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <!-- Like -->
                <LinearLayout
                    android:id="@+id/linearLayoutLikeVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#f4f4f4"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="2dp">


                    <ImageView
                        android:id="@+id/imageViewLike"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/like" />

                    <TextView
                        android:id="@+id/textViewLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:text="like"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- Dislike -->
                <LinearLayout
                    android:id="@+id/linearLayoutDislikeVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/linearLayoutLikeVideo"
                    android:layout_toRightOf="@+id/linearLayoutLikeVideo"
                    android:background="#f4f4f4"
                    android:clickable="true"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/dislike" />

                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/textViewVideoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewVideoViewCount"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
